RewriteEngine On

RewriteRule ^payment?$ payment.php
RewriteRule ^payment/([0-9a-zA-Z]+) payment.php?order_id=$1

RewriteRule ^cart?$ cart.php
RewriteRule ^orders?$ orders.php

RewriteRule ^category?$ category.php
RewriteRule ^category/([0-9a-zA-Z]+) category.php?cat=$1

RewriteRule ^product?$ product.php
RewriteRule ^product/([0-9]+)/([0-9a-zA-Z]+) product.php?id=$1&cat=$2
